import RISCV_Definitions;

/*
 * Input and output ports
 */
port in reg_t rd_i, out rd_o, in flags_t flags, in data_t fromMem, fromEx, out value_o;

/**
 * Task
 */
combinational void main() {
	rd_o.write(rd_i.read);
	flags_t flags = flags.read;
	value_o.write(flags[LOAD] ? fromMem.read : fromEx.read);
}
