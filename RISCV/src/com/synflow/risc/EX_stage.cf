import RISCV_Definitions;

/*
 * Input and output ports
 */
port in data_t op1, op2, rd, flags_t flags, out data_t addr, value, reg_index rd_o, flags_t flags_o;

/**
 * Task
 */
void main() {
	value.write(op1.read + op2.read);
	rd_o.write(rd.read);
	flags_o.write(flags.read);
}
